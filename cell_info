#!/bin/sh

file1=$(mktemp)

picocom -t "$(echo -ne 'AT+QENG="servingcell"\r\n')" /dev/ttyUSB2 --nolock --exit-after 300 --quiet --logfile $file1 >/dev/null
cellinfo=$(cat $file1 | awk 'FNR == 2 {print}' | awk -F "," '{print $7}' | cut -c -5 | awk '{ printf "%d\n", "0x" $1 }')
echo $cellinfo

rm $file1
